<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VolunteeringApp.Views.ShowVolunteerPage"
             FlowDirection="RightToLeft">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding FName}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text="{Binding LName}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text="{Binding Email}" HorizontalTextAlignment="Center" FontSize="Caption"/>
            <Label Text="{Binding UserName}" HorizontalTextAlignment="Center" FontSize="Body"/>
            <Label Text="{Binding BirthDate}" HorizontalTextAlignment="Center" FontSize="Body"/>
            <Label Text="{Binding GenderID}" HorizontalTextAlignment="Center" FontSize="Body"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>