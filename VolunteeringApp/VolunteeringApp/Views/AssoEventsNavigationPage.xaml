<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VolunteeringApp.Views.AssoEventsNavigationPage"
            xmlns:local="clr-namespace:VolunteeringApp.Views"
            FlowDirection="RightToLeft">

    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="כל האירועים" Priority='0' Order='Secondary' Clicked='ToolbarItem_Clicked_AllEvents'/>
        <ToolbarItem Text="הפרטים שלי" Priority='0' Order='Secondary' Clicked='ToolbarItem_Clicked_AssoProfile'/>
        <ToolbarItem Text="פרסום אירוע חדש" Priority='0' Order='Secondary' Clicked='ToolbarItem_Clicked_NewEvent' />
        <ToolbarItem Text="התנתקות" Priority='0' Order='Secondary' Clicked='ToolbarItem_Clicked_Logout'/>
    </TabbedPage.ToolbarItems>

    <!--Pages can be added as references or inline-->
    
    <local:AssoUpComingEventsPage Title="אירועים קרובים" />
    <local:AssoPastEventsPage Title="אירועים קודמים" />
</TabbedPage>